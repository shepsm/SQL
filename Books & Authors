SELECT books.title, authors.fullname, books.year_pub 
FROM books
LEFT JOIN authors
ON authors.id=books.author_id;

SELECT COUNT(books.title) as num_books_written, authors.fullname
FROM books
LEFT JOIN authors
ON authors.id=books.author_id
GROUP BY authors.fullname;

SELECT books.title, authors.fullname, books.year_pub 
FROM books
LEFT JOIN authors
ON authors.id=books.author_id
WHERE year_pub>1990;





